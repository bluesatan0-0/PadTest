<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_login"
    tools:context="com.zjxl.yanj.padtest.Activity.LoginActivity">


    <!--2dp=3px-->

    <RelativeLayout
        android:layout_width="424dp"
        android:layout_height="348dp"
        android:layout_centerInParent="true"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_title_ensure"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#4DCB4E"
            android:gravity="center"
            android:text="管 理 员 登 录"
            android:textColor="#ffffffff"
            android:textSize="40px" />

        <!--账户-->
        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_ensure"
            android:layout_centerInParent="true"
            android:layout_marginTop="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户："
                android:textSize="26px" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="26px" />


        </LinearLayout>

        <!--密码-->
        <LinearLayout
            android:id="@+id/ll_pwd"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_account"
            android:layout_centerInParent="true"
            android:layout_marginTop="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textSize="26px" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="26px" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="293dp"
            android:layout_height="45dp"
            android:layout_below="@id/ll_pwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:background="#FD6D34"
            android:text="登  录"
            android:textColor="#ffffffff"
            android:textSize="38px" />

    </RelativeLayout>


</RelativeLayout>
