<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="378px"
    android:layout_height="280px"
    android:layout_marginBottom="36px"
    android:layout_marginRight="38px"
    android:background="@drawable/selector_hole_item_tobe_select">

    <!--编号区-->

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="378px"
        android:layout_height="74px"
        android:layout_centerHorizontal="true"
        android:background="@color/color_hole_item_text_air_unset"
        android:gravity="center_vertical"
        android:paddingLeft="17.2dp"
        android:text="0"
        android:textColor="@color/color_hole_item_text_unset"
        android:textSize="32.7sp" />


    <!--菜品区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_code"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="17.2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dish_icon"
            android:layout_width="98px"
            android:layout_height="74px"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14px"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="番茄炒蛋"
                android:textColor="#353535"
                android:textSize="24px" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left">

                <TextView
                    android:id="@+id/tv_dish_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.00"
                    android:textColor="#A1A1A1"
                    android:textSize="18px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/100g"
                    android:textColor="#A1A1A1"
                    android:textSize="18px" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!--称重区-->

    <TextView
        android:id="@+id/tv_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26px"
        android:layout_marginRight="20dp"
        android:text="g"
        android:textColor="#FB6F1B"
        android:textSize="38px" />

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26px"
        android:layout_toStartOf="@id/tv_g"
        android:text="0.0"
        android:textColor="#FB6F1B"
        android:textSize="38px" />


    <!--状态图-->
    <ImageView
        android:id="@+id/iv_statu"
        android:layout_width="376px"
        android:layout_height="254px"
        android:layout_centerInParent="true"
        android:layout_margin="2px"
        android:scaleType="fitXY"
        android:src="@mipmap/item_hole_empty" />

</RelativeLayout>