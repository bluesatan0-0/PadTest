<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="326dp"
    android:layout_height="220.7dp"
    android:layout_marginBottom="31dp"
    android:layout_marginRight="33dp">

    <!--编号区-->
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_hole_code"
            android:layout_width="match_parent"
            android:layout_height="63.8dp"
            android:background="#FFF6F2"
            android:gravity="center_vertical"
            android:paddingLeft="17.2dp"
            android:text="0"
            android:textColor="#CBA99A"
            android:textSize="32.7sp"
            />

        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </LinearLayout>


    <!--菜品区-->

    <ImageView
        android:id="@+id/iv_dish_icon"
        android:layout_width="84.5dp"
        android:layout_height="63.8dp"
        android:layout_below="@id/tv_hole_code"
        android:layout_marginLeft="17.2dp"
        android:layout_marginTop="17.2dp" />


    <!--称重区-->
    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22.4dp"
        android:layout_toStartOf="@id/tv_g"
        android:text="0.0"
        android:textSize="32.7dp" />

    <TextView
        android:id="@+id/tv_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="22.4dp"
        android:layout_marginRight="20dp"
        android:text="g"
        android:textSize="32.7dp" />

    <!--状态图-->
    <ImageView
        android:id="@+id/iv_statu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>